extends layout.pug

block content
  div(class='py-3')
    //- a(class='btn btn-success' href='/park/add' role='button') Add Park
  table(class='table table-striped table-hover')
    thead(class='thead-dark')
      tr
        th(scope='col') Title
        th(scope='col') Director
        th(scope='col') Release Date
        th(scope='col') Rating
        th(scope='col') Scare Level
        th(scope='col') Add To Graveyard

    tbody
      each horrorMovie in horrorMovies
        tr
          td= horrorMovie.title
          td= horrorMovie.director
          td= horrorMovie.releasedate
          td= horrorMovie.rating
          td= horrorMovie.scarelevel
          td
            div
                form(action='/user/watchlist' method='post' type='hidden')
                button(type='submit' class='btn btn-primary') Add Movie To Graveyard
                //- a(class='btn btn-warning ml-2' href='/') Cancel
