extends layout.pug

block content
  div(class='movie-lib-div')
    h1(class='landing-h1') Movie Morgue
  div(class='py-3')
  table(class='table table-striped table-hover')
    thead(class='thead-dark')
      tr
        th(scope='col' class='reviewtext') Title
        th(scope='col' class='reviewtext') Director
        th(scope='col' class='reviewtext') Release Date
        th(scope='col' class='reviewtext') Rating
        th(scope='col' class='reviewtext') Scare Level
        th(scope='col' class='reviewtext') Add To Graveyard

    tbody
      each horrorMovie in horrorMovies
        tr
          td(id='title' class='reviewtext'): a(href=`/movies/${horrorMovie.id}`) #{horrorMovie.title}
          td(id='director' class='reviewtext')= horrorMovie.director
          td(id='releasedate' class='reviewtext')= horrorMovie.releasedate
          td(id='rating' class='reviewtext')= horrorMovie.rating
          td(id='scarelevel' class='reviewtext')= horrorMovie.scarelevel
          td(id='graveyard' class='reviewtext')
            div
                form(action='/user/watchlist' method='post')
                  input(type='hidden' name='horrormovieid' value=horrorMovie.id)
                  button(type='submit' class='btn1 logout-button' id=`movie_${horrorMovie.id}`) Add Movie To Graveyard
