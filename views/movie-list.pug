extends layout.pug

block content
  div(class='movie-lib-div')
    h1(class='landing-h1') Movie Morgue
  div(class='py-3')
  table(class='table table-striped table-hover')
    thead(class='thead-dark')
      tr
        th(scope='col') Title
        th(scope='col') Director
        th(scope='col') Release Date
        th(scope='col') Rating
        th(scope='col') Scare Level
        th(scope='col') Add To Graveyard

    tbody
      each horrorMovie in horrorMovies
        tr
          td(id='title'): a(href=`/movies/${horrorMovie.id}`) #{horrorMovie.title}
          td(id='director')= horrorMovie.director
          td(id='releasedate')= horrorMovie.releasedate
          td(id='rating')= horrorMovie.rating
          td(id='scarelevel')= horrorMovie.scarelevel
          td(id='graveyard')
            div
                form(action='/user/watchlist' method='post')
                  input(type='hidden' name='horrormovieid' value=horrorMovie.id)
                  button(type='submit' class='btn1 logout-button' id=`movie_${horrorMovie.id}`) Add Movie To Graveyard
