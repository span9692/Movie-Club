extends layout.pug

include utils.pug

block content
  +validationErrorSummary(errors)
  form(action='/user/login' method='post')
    input(type='hidden' name='_csrf' value=csrfToken)
    +field('Email Address', 'email', email)
    +field('Password', 'password', null, 'password')
    div(class='py-4')
      button(type='submit' class='btn-primary') Login
      div
        a(href='/user/register' class='btn-primary') Need to sign up for an account?
      div
        a(href='/' class='btn-warning') Cancel
