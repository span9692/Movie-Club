extends layout.pug

include utils.pug

  head
    link(rel='stylesheet' href='/stylesheets/layout.css')

block content

  div(class='register-form')
    p Here is where you can sign up for a Cinema Screamings account!

  +validationErrorSummary(errors)
  form(action='/user/register' method='post')
    //- input(type='hidden' name='_csrf' value=csrfToken)
    +field('First Name', 'firstname', firstname)
    +field('Last Name', 'lastname', lastname)
    +field('Email Address', 'email', email)
    +field('User Name', 'username', username)
    +field('Password', 'password', '', 'password')
    +field('Confirm Password', 'confirmpassword', '', 'password')
    div(class='py-4')
      button(type='submit' class='btn btn-primary') Register
  div
    p: a(href='/user/login' class='lk1') Already have an account?
    div
      a(href='/' class='lk1') Cancel
