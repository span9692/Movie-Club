extends layout.pug
append head
  script(src='/javascripts/graveyard-script.js' type='module' defer)
  title="Express Starter App"
  link(rel='stylesheet' href='/stylesheets/reset.css')
  link(rel='stylesheet' href='/stylesheets/layout.css')
block content

  div(class='movie-graveyard-div')
    h1 My Movie Graveyard
  div(class='py-3')
  table(class='table table-striped table-hover')
    thead(class='thead-dark')
      tr
        th(scope='col') Title
        th(scope='col') Director
        th(scope='col') Release Date
        th(scope='col') Rating
        th(scope='col') Scare Level
        th(scope='col') Remove From Graveyard

    tbody
      each watchlist in horrorMovies
        tr
          td: a(href=`/movies/${watchlist.HorrorMovie.id}`) #{watchlist.HorrorMovie.title}
          td= watchlist.HorrorMovie.director
          td= watchlist.HorrorMovie.releasedate
          td= watchlist.HorrorMovie.rating
          td= watchlist.HorrorMovie.scarelevel
          td
            div
                form(action='/user/watchlist/:id/delete' method='post')
                  input(type='hidden' name='_csrf' value=csrfToken)
                  input(type='hidden' name='horrormovieid' value=watchlist.id)
                  button(type='submit' class='exhume btn1' id=`${watchlist.HorrorMovie.id}`) Remove Movie From Graveyard
