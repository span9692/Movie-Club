extends layout.pug

block content
  div(class='py-3')
    //- a(class='btn btn-success' href='/park/add' role='button') Add Park
  table(class='table table-striped table-hover')
    thead(class='thead-dark')
      tr
        th(scope='col') Title
        th(scope='col') Director
        th(scope='col') Release Date
        th(scope='col') Rating
        th(scope='col') Scare Level

    tbody
      each watchlist in horrorMovies
        tr
          td= watchlist.HorrorMovie.title
          td= watchlist.HorrorMovie.director
          td= watchlist.HorrorMovie.releasedate
          td= watchlist.HorrorMovie.rating
          td= watchlist.HorrorMovie.scarelevel
          td
            div
                a(class='btn btn-primary', type='button', href='/') Remove Movie From Graveyard

