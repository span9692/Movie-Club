extends layout.pug

block content
    div(class='py-3')
        table(class='table table-striped table-hover')
            thead(class='thead-dark')
                tr
                    th(scope='col') Title
                    th(scope='col') Director
                    th(scope='col') Release Date
                    th(scope='col') Rating
                    th(scope='col') Scare Level
            tbody
                each horrorMovie in movieSearch
                    tr
                        td: a(href=`/movies/${horrorMovie.id}`) #{horrorMovie.title}
                        td= horrorMovie.director
                        td= horrorMovie.releasedate
                        td= horrorMovie.rating
                        td= horrorMovie.scarelevel
